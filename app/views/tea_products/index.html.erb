<div class="min-h-screen bg-[#F9F7F2]">

  <section class="px-6 pt-16 mb-12">
    <div class="max-w-4xl mx-auto text-center border-b border-[#365442]/20 pb-8">
      
      <div class="inline-block w-8 h-1 bg-[#C5A065] mb-4"></div>

      <h1 class="text-3xl font-serif font-medium text-[#365442] mb-3 tracking-widest">
        紅茶一覧
      </h1>
      <p class="text-sm font-sans text-[#8C7B6C] tracking-wider">
        みんなが登録した紅茶を探してみましょう
      </p>
    </div>
  </section>

  <section class="px-6 pb-24">
    <div class="max-w-4xl mx-auto">

      <% if @tea_products.present? %>
        <div class="space-y-6">
          <%= render partial: "tea_product", collection: @tea_products %>
        </div>
      <% else %>
        <div class="bg-[#FBF8F1] border-2 border-dashed border-[#D6CEC5] rounded-xl p-12 text-center text-[#8C7B6C] font-serif tracking-widest">
          公開中の紅茶がまだありません
        </div>
      <% end %>

      <div class="mt-16 flex justify-center">
        <%= paginate @tea_products %>
      </div>

    </div>
  </section>

</div>
