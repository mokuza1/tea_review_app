<header class="w-full border-b-2 border-[#D6CEC5] bg-[#F9F7F2]">
  <div class="mx-auto max-w-7xl px-6 py-3 md:min-h-20">

    <!-- 上段 -->
    <div class="flex items-center justify-between min-h-14">

      <!-- ロゴ -->
      <div class="text-2xl font-serif font-bold text-[#365442] tracking-tighter leading-none flex items-center">
        <%= link_to "みんなの紅茶図鑑", root_path, class: "hover:opacity-80 transition" %>
      </div>

      <!-- ハンバーガー -->
      <input type="checkbox" id="menu-toggle" class="hidden peer">

      <label for="menu-toggle" class="md:hidden cursor-pointer">
        <div class="space-y-1">
          <span class="block w-6 h-0.5 bg-[#365442]"></span>
          <span class="block w-6 h-0.5 bg-[#365442]"></span>
          <span class="block w-6 h-0.5 bg-[#365442]"></span>
        </div>
      </label>

      <!-- PCメニュー -->
      <div class="hidden md:flex items-center space-x-8 text-base font-medium">

        <%= link_to "ログイン",
              new_user_session_path,
              class: "text-[#433D3C] hover:text-[#365442] font-serif tracking-wider transition" %>

        <%= link_to "新規登録",
              new_user_registration_path,
              class: "rounded bg-[#365442] text-[#F9F7F2] px-6 py-2.5 font-serif tracking-widest hover:bg-[#2A4034] shadow-sm transition" %>
      </div>

    </div>

    <!-- スマホメニュー -->
    <div class="hidden peer-checked:block md:hidden mt-4 space-y-4 text-right">

      <%= link_to "ログイン",
            new_user_session_path,
            class: "block text-[#433D3C] font-serif tracking-wider" %>

      <%= link_to "新規登録",
            new_user_registration_path,
            class: "inline-block rounded bg-[#365442] text-[#F9F7F2] px-6 py-2.5 font-serif tracking-widest" %>

    </div>

  </div>
</header>
