<%= form_with model: [:admin, @flavor_category], local: true do |f| %>
  <% if @flavor_category.errors.any? %>
    <div class="mb-4 text-red-600">
      <ul>
        <% @flavor_category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.label :name, "大カテゴリ名", class: "block mb-1 font-semibold" %>
    <%= f.text_field :name, class: "w-full border rounded px-3 py-2" %>
  </div>

  <%= f.submit "保存", class: "px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700" %>
<% end %>
