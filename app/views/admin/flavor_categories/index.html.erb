<h2 class="text-2xl font-bold mb-6">フレーバー大カテゴリ一覧</h2>

<div class="mb-4">
  <%= link_to "+ 大カテゴリ追加",
        new_admin_flavor_category_path,
        class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
</div>

<table class="w-full border">
  <thead>
    <tr class="bg-gray-100">
      <th class="border p-2 text-left">名前</th>
      <th class="border p-2">操作</th>
    </tr>
  </thead>
  <tbody>
    <% @flavor_categories.each do |category| %>
      <tr>
        <td class="border p-2">
          <%= category.name %>
        </td>
        <td class="border p-2 text-center">
          <%= link_to "フレーバー管理",
                admin_flavor_category_flavors_path(category),
                class: "text-blue-600 underline mr-3" %>

          <%= link_to "編集",
                edit_admin_flavor_category_path(category),
                class: "text-green-600 underline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>