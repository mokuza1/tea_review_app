<h2 class="text-2xl font-bold mb-6">
  ダッシュボード
</h2>

<!-- KPI cards -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
  <div class="bg-white p-6 rounded-lg shadow-sm border">
    <p class="text-sm text-gray-500">未承認 TeaProducts</p>
    <p class="text-3xl font-bold mt-2">
      <%= @pending_tea_products_count %>
    </p>
  </div>

  <div class="bg-white p-6 rounded-lg shadow-sm border">
    <p class="text-sm text-gray-500">未承認 Brands</p>
    <p class="text-3xl font-bold mt-2">
      <%= @pending_brands_count %>
    </p>
  </div>

  <div class="bg-white p-6 rounded-lg shadow-sm border">
    <p class="text-sm text-gray-500">公開中 TeaProducts</p>
    <p class="text-3xl font-bold mt-2">
      <%= @published_tea_products_count %>
    </p>
  </div>

  <div class="bg-white p-6 rounded-lg shadow-sm border">
    <p class="text-sm text-gray-500">登録ユーザー数</p>
    <p class="text-3xl font-bold mt-2">
      <%= @users_count %>
    </p>
  </div>
</div>

<!-- Quick links -->
<div class="bg-white rounded-lg shadow-sm border p-6">
  <h3 class="text-lg font-semibold mb-4">
    クイック操作
  </h3>

  <div class="flex flex-wrap gap-4">
    <%= link_to "承認待ち TeaProducts",
          admin_tea_products_path(status: :pending),
          class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 text-sm" %>

    <%= link_to "承認待ち Brands",
          admin_brands_path(status: :pending),
          class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 text-sm" %>
  </div>
</div>

<div class="bg-white rounded-lg shadow-sm border p-6">
  <%= link_to "大カテゴリフレーバー管理",
      admin_flavor_categories_path,
      class: "px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 text-sm" %>
</div>