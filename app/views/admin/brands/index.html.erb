<h2 class="text-xl font-bold mb-6">
  Brands 管理
</h2>

<table class="w-full border border-gray-200 text-sm">
  <thead class="bg-gray-50">
    <tr>
      <th class="p-2 border">日本語名</th>
      <th class="p-2 border">英語名</th>
      <!--<th class="p-2 border">国</th>-->
      <th class="p-2 border">投稿者</th>
      <th class="p-2 border">ステータス</th>
      <th class="p-2 border">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr class="border-t">
        <td class="p-2">
          <%= brand.name_ja.presence || "-" %>
        </td>

        <td class="p-2">
          <%= brand.name_en.presence || "-" %>
        </td>

        <!--<td class="p-2">
          <%= brand.country.presence || "-" %>
        </td>-->

        <td class="p-2">
          <%= brand.user.name %>
        </td>

        <td class="p-2">
          <%= brand.status_i18n %>
        </td>

        <td class="p-2 space-x-2">
          <% if brand.pending? %>
            <%= button_to "承認",
                  approve_admin_brand_path(brand),
                  method: :patch,
                  class: "px-2 py-1 bg-green-600 text-white rounded text-xs" %>

            <%= button_to "却下",
                  reject_admin_brand_path(brand),
                  method: :patch,
                  class: "px-2 py-1 bg-red-600 text-white rounded text-xs" %>
          <% end %>

          <%= link_to "詳細",
                admin_brand_path(brand),
                class: "text-blue-600 hover:underline text-xs" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

