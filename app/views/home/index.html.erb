<div class="min-h-screen bg-[#e8dccf] flex flex-col">

  <!-- Hero -->
  <section class="relative w-full h-[220px] md:h-[300px] mb-12">

    <!-- Top Image -->
    <div
      class="absolute inset-0 bg-center bg-cover"
      style="background-image: url('<%= asset_path("home_top.png") %>')">
    </div>

    <!-- Overlay -->
    <div class="absolute inset-0 bg-black/40"></div>

    <!-- Title -->
    <div class="relative z-10 h-full flex flex-col items-start justify-center text-left px-8">

      <h1 class="text-3xl md:text-5xl font-bold text-white mb-2">
        みんなの紅茶図鑑
      </h1>

      <p class="text-base md:text-xl text-gray-200">
        ~ 探して育てる、紅茶データベース ~
      </p>

    </div>

  </section>

  <!-- Search -->
  <section class="px-6 mb-14">
    <div class="max-w-xl mx-auto bg-white/80 backdrop-blur shadow-sm rounded-2xl p-6">

      <%= search_form_for @q,
            url: tea_products_path,
            method: :get,
            class: "flex flex-col sm:flex-row gap-3" do |f| %>

        <%= f.search_field :name_or_brand_name_ja_or_brand_name_en_cont,
              placeholder: "商品名・ブランド名で検索",
              class: "w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#7a6a58] focus:outline-none" %>

        <%= f.submit "検索",
              class: "bg-[#7a6a58] hover:bg-[#665746] text-white px-6 py-3 rounded-lg transition" %>

      <% end %>
    </div>
  </section>

  <!-- Panels -->
  <section class="px-6 mb-20">
    <div class="max-w-4xl mx-auto flex justify-center gap-10">

      <!-- Flavor Panel -->
      <button
        data-controller="modal"
        data-action="click->modal#openFlavor"
        class="relative w-48 sm:w-56 aspect-square overflow-hidden rounded-2xl shadow-md hover:shadow-lg transition group">

        <!-- Image -->
        <div
          class="absolute inset-0 bg-center bg-cover"
          style="background-image: url('<%= asset_path("flavor.png") %>')">
        </div>

        <!-- Hover Dark Overlay -->
        <div
          class="absolute inset-0 bg-black/0 group-hover:bg-black/30 transition">
        </div>

        <!-- Label -->
        <span
          class="absolute top-0 left-0 z-10 bg-white text-[#3b2f2f] text-base font-semibold px-4 py-1.5 rounded-r-md shadow">
          フレーバー
        </span>

      </button>

      <!-- Brand Panel -->
      <button
        data-controller="modal"
        data-action="click->modal#openBrand"
        class="relative w-48 sm:w-56 aspect-square overflow-hidden rounded-2xl shadow-md hover:shadow-lg transition group">

        <!-- Image -->
        <div
          class="absolute inset-0 bg-center bg-cover"
          style="background-image: url('<%= asset_path("brand.png") %>')">
        </div>

        <!-- Hover Dark Overlay -->
        <div
          class="absolute inset-0 bg-black/0 group-hover:bg-black/30 transition">
        </div>

        <!-- Label -->
        <span
          class="absolute top-0 left-0 z-10 bg-white text-[#3b2f2f] text-base font-semibold px-4 py-1.5 rounded-r-md shadow">
          ブランド
        </span>

      </button>

    </div>

    <%= render "shared/search_modal" %>
  </section>

</div>
